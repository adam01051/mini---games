  mix-blend-mode: difference;
}
.container1
{
    display: flex;
    flex-direction: column;
    height: 70vh;
    width: auto;
    justify-content: center;
    align-items: center;
    gap: 2rem;
  
}
.elem1
{
    width: 80%;
    height: auto;
    margin-right: 3px;
    padding: 10px;
    padding-left: 20px;
     border: 1px dashed rgba(0, 0, 0, 0.1); /* Dashed border with 60% opacity black */
  
     transition: border-color 0.3s, border-radius 0.3s;
 border-collapse: collapse;
    
}



.elem1:focus {

    box-shadow: rgba(0,0,0,0.2) 0 0 15px;

    outline: none;        
}






.elem2
{
    margin-right: 5px;
    padding: 10px;
    opacity: 0.5;
     box-shadow: rgba(0,0,0,0.2) 0 0 15px;
    
}
.contain1{
  width: 100%;
    height: fit-content;
  display: flex;
  flex-direction: row;
  justify-content: center;
    align-items: center;
padding: 1.5rem;
}


.container2{
    width: 70%;
    height: fit-content;
    background-color: antiquewhite;
    display:flex;
    flex-direction:column;
     justify-content: center;
    align-items: center;
padding: 2rem;
 border: 1px dashed rgba(0, 0, 0, 0.1); /* Dashed border with 60% opacity black */
    background-color: #ffffff;
    box-shadow: rgba(0,0,0,0.2) 0 0 15px;

}
.pressed {
  box-shadow: 0 3px 4px 0 #cdcecf;
  opacity: 0.5;
}
.container3{
    width: 70%;
    height: fit-content;

    display:flex;
    flex-direction:row;
     justify-content: center;
    align-items: center;
    padding: 2rem;
    border: 1px dashed rgba(0, 0, 0, 0.1); /* Dashed border with 60% opacity black */
    background-color: #ffffff;
    box-shadow: rgba(0,0,0,0.3) 0 0 15px;


}



.smal-con{
    display: flex;
    justify-content: center;
    align-items: center;
    height: 150px;
    width: 150px;
}

</style>


</head>
<body>
  
<header class="py-3 mb-4 border-bottom">
    <div class="container d-flex flex-wrap justify-content-center">
      <a href="/" class="d-flex align-items-center mb-3 mb-lg-0 me-lg-auto link-body-emphasis text-decoration-none">
        <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"></use></svg>
        <span class="fs-4">adams-link</span>
      </a>
      
<ul class="nav nav-pills align-items-center ">
            <li class="nav-item"><a href="#" class="nav-link" aria-current="page"> <button type="button" class="btn btn-dark" style="margin: 0;">Home </button></a></li>
           
            <li class="nav-item"><a href="#" class="nav-link  text-dark">Features</a></li>
            <li class="nav-item"><a href="#" class="nav-link  text-dark">Pricing</a></li>
            <li class="nav-item"><a href="#" class="nav-link  text-dark">FAQs</a></li>
            <li class="nav-item"><a href="#" class="nav-link  text-dark">About</a></li>
        </ul>
    </div>
  </header>



<form class="container1" action="submit_url" method="post">

    <h3>Manage Your Links Like a Pro - Shorten and Organize in One Place.</h3>
   
    <div class="container2">
      <div class="contain1">
 <input class="elem1 "  type="text" name="links" id="links" placeholder="Paste your link here">
<input class="elem2" type="submit" value="submit">
</div>
<select class="form-select " style="width: auto;" name="sel1" aria-label="Default select example">
  <option  value="1" selected>Shorten link</option>
  <option  value="2">Links to Qr-Code</option>
  
</select>
    </div>
    
<!-- select to have link or qr  optional -->



<!-- --------- -->

<!-- --------- -->

<% if (locals.dat1 === 0) { %>
    <% console.log("nothing is here") %>
<% } else if (locals.dat1 === 400) { %>
    <div class="container3">
        <label for="link">Please provide a valid URL.</label>
    </div>
<% } else { %>
    <% if (locals.dat1 !== 3) { %>
        <div class="container3">
            <label for="link"><a class="link-body-emphasis text-decoration-none" href="<%= locals.dat1 %>"><%= locals.dat1 %></a></label>
        </div>
    <% } else { %>
        <!-- Assuming the QR code image will be displayed if locals.dat1 is 3 -->
        <div class="container3">
            <div class="smal-con">
                <img src="qr-of-link.png" alt="QR Code" height="120px" width="120px">
            </div>
        </div>
    <% } %>
<% } %>
 
</form> 
   



</form>

 



            






   
